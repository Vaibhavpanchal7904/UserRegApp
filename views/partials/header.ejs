<link rel="stylesheet" href="/css/header.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<nav class="custom-navbar">
  <div class="navbar-container">
    <a class="navbar-brand app-heading" href="/">
      <i class="fas fa-user"></i> UserRegApp
    </a>
    <ul class="navbar-menu">
      <% if (!currentUser) { %>
        <li><a href="/login"><i class="fas fa-key"></i> Login</a></li>
        <li><a href="/register"><i class="fas fa-file-signature"></i> Register</a></li>
      <% } else { %>
        <li><a href="/profile"><i class="fas fa-user-circle"></i> Profile</a></li>
        <% if (currentUser.role === 'admin') { %>
          <li><a href="/admin/dashboard"><i class="fas fa-cogs"></i> Admin</a></li>
        <% } %>
        <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      <% } %>
    </ul>
  </div>
</nav>