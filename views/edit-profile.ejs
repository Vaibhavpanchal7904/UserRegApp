<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<!doctype html>
<html>
<head>
  <title>Edit Profile</title>
  <link rel="stylesheet" href="/css/register.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4" style="max-width: 800px; margin: auto;">
      <h2 class="text-center mb-3">Edit Profile</h2>

      <p class="text-muted text-center mb-4" style="font-size:14px;">
        Update your profile information below. Fields marked with * are required.
      </p>

      <!-- Success/Error messages -->
      <% if (successMessage) { %>
        <div class="alert alert-success"><i class="fa fa-check-circle me-2"></i><%= successMessage %></div>
      <% } %>
      <% if (errorMessage) { %>
        <div class="alert alert-danger"><i class="fa fa-exclamation-circle me-2"></i><%= errorMessage %></div>
      <% } %>

      <form method="POST" action="/profile/edit">
        <div class="row g-3">
          <!-- Full Name -->
          <div class="col-md-6">
            <label class="form-label"><i class="fa fa-user me-2"></i>Full Name *</label>
            <input class="form-control" name="fullName" type="text" placeholder="Enter your name" required 
                   value="<%= user.fullName || '' %>">
            <div class="form-text">Enter your first and last name.</div>
          </div>

          <!-- Email (readonly) -->
          <div class="col-md-6">
            <label class="form-label"><i class="fa fa-envelope me-2"></i>Email</label>
            <input class="form-control" name="email" type="email" readonly 
                   value="<%= user.email || '' %>">
            <div class="form-text">Email cannot be changed.</div>
          </div>

          <!-- Phone -->
          <div class="col-md-6">
            <label class="form-label"><i class="fa fa-phone me-2"></i>Phone</label>
            <input class="form-control" name="phone" type="text" placeholder="Enter phone number" 
                   value="<%= user.phone || '' %>">
            <div class="form-text">Optional – include country code if outside your region.</div>
          </div>

          <!-- Gender -->
          <div class="col-md-6">
            <label class="form-label"><i class="fa fa-venus-mars me-2"></i>Gender</label>
            <select class="form-select" name="gender">
              <option value="Male" <%= user.gender === 'Male' ? 'selected' : '' %>>Male</option>
              <option value="Female" <%= user.gender === 'Female' ? 'selected' : '' %>>Female</option>
              <option value="Other" <%= user.gender === 'Other' || !user.gender ? 'selected' : '' %>>Other</option>
            </select>
          </div>

          <!-- Date of Birth -->
          <div class="col-md-6">
            <label class="form-label"><i class="fa fa-calendar me-2"></i>Date of Birth</label>
            <input class="form-control" name="dob" type="date" 
                   value="<%= user.dob ? user.dob.toISOString().split('T')[0] : '' %>">
            <div class="form-text">Used only for profile information, not shared publicly.</div>
          </div>

          <!-- Address -->
          <div class="col-md-12">
            <label class="form-label"><i class="fa fa-map-marker-alt me-2"></i>Address</label>
            <textarea class="form-control" name="address" rows="2" placeholder="Enter your address"><%= user.address || '' %></textarea>
            <div class="form-text">Optional – helps us personalize your account.</div>
          </div>
        </div>

        <!-- Submit -->
        <div class="text-center mt-4">
          <button class="btn btn-primary px-4" type="submit">
            <i class="fa fa-save me-2"></i>Save Changes
          </button>
        </div>
      </form>

      <p class="text-center mt-3">
        Want to change password?
        <a href="/profile/change-password" class="text-decoration-none">
          <i class="fa fa-lock me-1"></i>Click here
        </a>
      </p>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
